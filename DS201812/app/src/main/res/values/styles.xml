<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <!--EditText hint color-->
        <item name="android:textColorHint">@color/color_un_focus</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/white</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/white</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/color_un_focus</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <!--<item name="android:popupBackground">#FFF</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
